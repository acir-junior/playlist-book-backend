{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src/",
  "roots": ["<rootDir>"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@core/(.*)$": "<rootDir>/core/$1"
  },
  "testTimeout": 30000
}
